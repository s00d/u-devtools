{
  "name": "u-devtools",
  "version": "0.1.0",
  "description": "Universal DevTools Kit - DevTools-as-a-Service framework",
  "private": true,
  "type": "module",
  "scripts": {
    "build:core": "pnpm --filter './packages/core' run build",
    "build:bridge": "pnpm --filter './packages/bridge' run build",
    "build:ui": "pnpm --filter './packages/ui' run build",
    "build:vite": "pnpm --filter './packages/vite' run build",
    "build:client": "pnpm --filter './packages/client' run build",
    "build:kit": "pnpm --filter './packages/kit' run build",
    "build": "pnpm --filter './packages/*' --filter './plugins/*' --parallel run build",
    "dev": "pnpm --filter './playground' run dev",
    "dev:playground": "pnpm --filter './playground' run dev",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format:check",
    "prepublishOnly": "pnpm run check && pnpm run test && pnpm run build",
    "playground:build": "pnpm run build && pnpm --filter './playground' run build && pnpm --filter './playground' run preview"
  },
  "keywords": [
    "devtools",
    "debugging",
    "vite",
    "plugin"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/cli": "^2.29.8",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/ui": "^4.0.16",
    "@vueuse/core": "^14.1.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.3"
    }
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "vue-json-pretty": "^2.6.0"
  },
  "packageManager": "pnpm@9.15.9"
}
