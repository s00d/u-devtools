{
  "name": "@u-devtools/client",
  "version": "0.1.0",
  "description": "Client-side UI shell for Universal DevTools",
  "type": "module",
  "main": "./src/main.ts",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public",
    "main": "./dist/main.js",
    "module": "./dist/main.js",
    "types": "./dist/main.d.ts",
    "exports": {
      ".": {
        "types": "./dist/main.d.ts",
        "import": "./dist/main.js"
      },
      "./style.css": "./dist/main.css",
      "./main.css": "./dist/main.css",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "vite build",
    "typecheck": "vue-tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@u-devtools/bridge": "workspace:*",
    "@u-devtools/core": "workspace:*",
    "@u-devtools/ui": "workspace:*",
    "@u-devtools/utils": "workspace:*",
    "@vueuse/core": "^14.1.0",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.1"
  }
}
