        "import": "./dist/index.es.js",
        "require": "./dist/index.cjs.js"
      }
    }
  },
  "scripts": {
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "devtools",
    "rpc",
    "bridge",
    "communication",
    "u-devtools"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s00d/u-devtools.git",
    "directory": "packages/bridge"
  },
  "dependencies": {
    "@u-devtools/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "typescript": "^5.9.3"
  }
}