  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.cjs.js",
